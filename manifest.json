{
    "manifest_version": 2,
    "name": "lims extension",
    "description": "This extension shows the books in an individual's cart",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Library Management System",
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": false,
        "scripts": [
          "js/background.js"
            ]
    },
    // "options_ui": {
	// 	"page": "options.html",
	// 	"chrome_style": true
	// },
    "permissions": [
        "activeTab",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "js/assets/images/*.png"
      ]
}